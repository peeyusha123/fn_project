<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.2.827/styles/kendo.default-v2.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2022.2.827/js/kendo.all.min.js"></script>
    <title>Modal Example</title>
</head>
<body>

<button id="openModalBtn">Open Modal</button>

<div id="myModal" style="display: none;">
    <label for="age">Age:</label>
    <input type="number" id="age">

    <label for="date">Date:</label>
    <input type="date" id="date">

    <label for="organization">Organization:</label>
    <select id="organization">
        <option value="CompanyA">Company A</option>
        <option value="CompanyB">Company B</option>
        <option value="CompanyC">Company C</option>
    </select>

    <button id="saveBtn">Save</button>
</div>

<div id="grid"></div>

<script>
    $(document).ready(function () {
        // Open modal on button click
        $("#openModalBtn").click(function () {
            $("#myModal").show();
        });

        // Save button click
        $("#saveBtn").click(function () {
            // Get input values
            var age = $("#age").val();
            var date = $("#date").val();
            var organization = $("#organization").val();

            // Dummy endpoint URL
            var endpointUrl = "https://dummy-endpoint.com";

            // Dummy payload for demonstration
            var payload = {
                age: age,
                date: date,
                organization: organization
            };

            // Log the payload (you would typically make an AJAX call here)
            console.log("Request Payload:", payload);

            // Close modal
            $("#myModal").hide();

            // Display values in Kendo Grid
            var gridData = [{
                Age: age,
                Date: date,
                Organization: organization
            }];

            $("#grid").kendoGrid({
                dataSource: {
                    data: gridData,
                    pageSize: 5
                },
                columns: [
                    { field: "Age", title: "Age" },
                    { field: "Date", title: "Date" },
                    { field: "Organization", title: "Organization" }
                ],
                pageable: true
            });
        });
    });
</script>

</body>
</html>
