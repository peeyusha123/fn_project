<body>
  <div class="container">
    <form id="loginForm">
      <label for="username">Username</label>
      <input type="text" id="username" placeholder="Enter the User Name" onblur="validateEmpty('username')" onfocus="removeValidation('username')">
      <label for="password">Password</label>
      <input type="password" id="password" placeholder="Enter the Password" onblur="validateEmpty('password')" onfocus="removeValidation('password')">
      <button type="button" id="submitBtn" onclick="submitForm()" disabled>Submit</button>
      <button type="button" id="resetBtn" onclick="resetForm()">Reset</button>
      <button type="button" id="signUpBtn" onclick="signUp()">Sign Up</button>
      <button type="button" id="passwordResetBtn" onclick="passwordReset()">Password Reset</button>
    </form>
