html ....

<!-- Add this inside the <body> tag of your login.html -->
<div id="signUpModalContainer"></div>

<!-- Add this inside the <script> tag at the end of your login.html -->
<script>
  function openSignUpModal() {
    const signUpModalContainer = document.getElementById("signUpModalContainer");
    signUpModalContainer.innerHTML = `
      <div id="signUpModal" class="modal" style="display: block;">
          <div class="modal-content">
              <span class="close" onclick="closeSignUpModal()">&times;</span>
              <label for="newUsername">User Name:</label>
              <input type="text" id="newUsernameSignUp" placeholder="Enter the User Name">

              <label for="newPassword">Password:</label>
              <input type="password" id="newPasswordSignUp" placeholder="Enter the Password">

              <button type="button" onclick="submitSignUpForm()">Submit</button>
              <button type="button" onclick="resetStorage()">Reset Storage</button>
          </div>
      </div>
    `;
  }

  function closeSignUpModal() {
    document.getElementById("signUpModalContainer").innerHTML = "";
  }
</script>

css...

/* Add this to your login.css */
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(0, 0, 0);
  background-color: rgba(0, 0, 0, 0.4);
  padding-top: 60px;
}

.modal-content {
  background-color: #fefefe;
  margin: 5% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}

.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}

