// Add these functions to your existing login.js
function submitSignUpForm() {
  const newUsername = document.getElementById("newUsernameSignUp").value;
  const newPassword = document.getElementById("newPasswordSignUp").value;

  // Add your logic to check and store new user information

  // Close the modal after submission
  closeSignUpModal();
}

function resetStorage() {
  // Add your logic to reset storage
  // Clear stored local storage list
  localStorage.removeItem("userList");

  // Close the modal after resetting storage
  closeSignUpModal();
}
