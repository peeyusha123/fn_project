<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modal Example</title>
    <style>
        /* Add your styles for the modal here */
        .modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #fff;
            z-index: 1;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        /* Add more styles as needed */
    </style>
</head>
<body>

<!-- Button to open the modal -->
<button onclick="openModal()">Open Modal</button>

<!-- The Modal -->
<div id="myModal" class="modal">
    <!-- Modal content -->
    <form id="myForm">
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" required><br>

        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required><br>

        <label for="organization">Organization:</label>
        <select id="organization" name="organization">
            <!-- Sample values -->
            <option value="org1">Organization 1</option>
            <option value="org2">Organization 2</option>
            <option value="org3">Organization 3</option>
        </select><br>

        <!-- Add more input fields as needed -->

        <button type="button" onclick="saveData()">Save</button>
    </form>
</div>

<script>
    // Get the modal
    const modal = document.getElementById('myModal');

    // Function to open the modal
    function openModal() {
        modal.style.display = 'block';
    }

    // Function to close the modal
    function closeModal() {
        modal.style.display = 'none';
    }

    // Function to save data (dummy endpoint)
    function saveData() {
        const endpoint = 'https://your-dummy-endpoint.com'; // Replace with your actual endpoint
        const formData = new FormData(document.getElementById('myForm'));

        // Example: Sending data to the server (replace with your actual AJAX request)
        fetch(endpoint, {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            console.log('Data saved successfully:', data);
            closeModal(); // Close the modal after saving data
        })
        .catch(error => console.error('Error saving data:', error));
    }
</script>

</body>
</html>
